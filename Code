using System;
using System.Collections.Generic;
using System.Linq;
using System.Text;

namespace ConsoleApplication1
{
    class Program
    {
        static void Main(string[] args)
        {
            Console.WriteLine("Hello please press enter");
            Console.ReadLine();
            Console.BackgroundColor = ConsoleColor.Blue;
            ulong i;
            ulong row;

            for (row = 1; row <= ulong.MaxValue; row++)
            {
                for (i = 1; i <= row; i++)

                    Console.Write("Mikku");
                Console.WriteLine();
            }
            Console.ReadLine();
        }
    }
}

